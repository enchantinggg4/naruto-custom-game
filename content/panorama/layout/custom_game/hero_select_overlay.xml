<root>
    <styles>
		<!--<include src="file://{resources}/styles/dotastyles.css"/>-->
		<include src="file://{resources}/styles/custom_game/hero_select_overlay.css"/>
    </styles>

    <scripts>
        <include src="file://{resources}/scripts/custom_game/hero_select_overlay.js"/>
    </scripts>

    <snippets>
        <snippet name="Quest">
            <Panel hittest="true" class="HeroPreview">
                <Image hittest="true" id="HeroImage" scaling="stretch-to-cover-preserve-aspect"/>
                <Label hittest="true" id="HeroName" />
            </Panel>

        </snippet>

        <snippet name="PlayerHeroTab">
            <Panel hittest="true" class="PlayerHero">
                <Image hittest="true" id="PlayerHeroImage" scaling="stretch-to-cover-preserve-aspect"/>
                <Label hittest="true" id="PlayerHeroName" />
            </Panel>
        </snippet>

    </snippets>


	<Panel hittest="false" style="width: 100%; height: 100%;background-color: #000000;">
        <Panel id="HeroSelectOverlayRoot">

            <Panel id="Players">
                <Panel id="RadiantPlayers"></Panel>

                <Panel id="Filler">
                    <Panel id="Timer">
                        <Label hittest="false" id="TimerValue" text="HAHAHA" />
                    </Panel>
                </Panel>
                <Panel id="DirePlayers"></Panel>
            </Panel>


            <Panel hittest="false"  id="Spacer">
                <Panel hittest="false" id="HeroesList" >

                </Panel>
            </Panel>


            <Panel hittest="false" id="SelectedHero" >
                <Image id="SelectedHeroImage" />
                <Button id="EnterGameButton" onactivate="EnterGame()" class="disabled" >
                    <Label id="EnterGameBtnTxt" text="Waiting for other players..." />
                </Button>
            </Panel>

        </Panel>
	</Panel>
</root>
